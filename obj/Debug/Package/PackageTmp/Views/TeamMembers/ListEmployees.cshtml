@model Sitecore.Data.Items.Item
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Sitecore.Resources.Media
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">@Html.Sitecore().Field("Title")</h2>
            <h3 class="section-subheading text-muted">@Html.Sitecore().Field("Subtitle")</h3>
        </div>
    </div>
    <div class="row">
        @foreach (Item employee in Model.Children)
        {
            <div class="col-sm-4">
                <div class="team-member">
                    @Html.Sitecore().Field("Photo", employee, new { @class = "img-responsive img-circle" })
                    <h4>@Html.Sitecore().Field("First Name", employee) @Html.Sitecore().Field("Last Name", employee)</h4>
                    <p class="text-muted">@Html.Sitecore().Field("Job Title", employee)</p>
                    <ul class="list-inline social-buttons">
                        <li>
                            <a href="@employee.Fields["Twitter"]"><i class="fa fa-twitter"></i></a>
                        </li>
                        <li>
                            <a href="@employee.Fields["Facebook"]"><i class="fa fa-facebook"></i></a>
                        </li>
                        <li>
                            <a href="@employee.Fields["Twitter"]"><i class="fa fa-linkedin"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 text-center">
            <p class="large text-muted">@Html.Sitecore().Field("Content")</p>
        </div>
    </div>
</div>
